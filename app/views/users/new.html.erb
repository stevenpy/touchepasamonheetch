<h3>Welcome to Heetch french survey</h3>

<p id="notice"><%= notice %></p>

<%= form_for @user do |f| %>
  <div id="country">
    <%= f.label :country, 'Where are you from ?' %>
    <%= f.text_field :country %>
    <br/>
    <button type="button" id="submit_country">Next</button>
  </div>

  <div id="candy" class="hidden" >
    <%= f.label :candy_fan, 'Do you like candy ?' %>
    <%= f.check_box :candy_fan %>
    <br/>
    <button type="button" id="submit_candy">Next</button>
  </div>

  <div id="nightclub" class="hidden">
    <%= f.label :night_club_fan, 'Do you like nightclub ?' %>
    <%= f.check_box :night_club_fan %>
    <br/>
    <button type="button" id="submit_nightclub">Next</button>
  </div>

  <div id="fan" class="hidden">
    <%= f.label :fan_type, 'So, what do you like ?' %>
    <%= f.text_field :fan_type %>
    <br/>
  </div>

  <div id="message" class="hidden" >
   <p>Thanks for following Heetch but we are not open yet in your country :(</p>
  </div>
  
  <div id="submit_final" class="hidden">
    <%= f.submit("Submit") %>
  </div>

<% end %>